<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="curved">
        <item name="cornerSize">15%</item>
    </style>
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>
    <style name="smallCircle">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>

    </style>
    <style name="roundedNoBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item> <!-- Sin bordes redondeados -->
        <item name="strokeWidth">0dp</item> <!-- Sin borde -->
    </style>
    <style name="MultilineTextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#1C2232</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>